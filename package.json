{
  "name": "Notupadu",
  "version": "1.3.0",
  "description": "Notupadu is a note editor that allows you to take notes but not save them, because HIPAA bitch.",
  "homepage": "https://github.com/erroldee/notupadu",
  "main": "app.js",
  "scripts": {
    "start": "npm run angular:standalone",
    "angular:standalone": "ng serve --proxy-config proxy.conf.json",
    "angular:build": "ng build --prod --sm=false --aot=true --output-path=./client",
    "electron:run": "electron app.js",
    "electron:build": "tsc -p .",
    "electron:local": "npm run electron:build && npm run electron:run",
    "electron:prod": "set NODE_ENV=production&& npm run angular:build && npm run electron:local",
    "tdd:postinstall": "npm run angular:build",
    "tdd:test": "ng test --watch=false",
    "tdd:pree2e": "webdriver-manager update",
    "tdd:e2e": "protractor",
    "local:linux": "set NODE_ENV=production&& npm run angular:build && npm run local:prod && node package.js --asar --platform=linux --arch=x64",
    "local:windows": "set NODE_ENV=production&& npm run angular:build && npm run local:prod && node package.js --asar --platform=win32 --arch=ia32",
    "local:mac": "set NODE_ENV=production&& npm run angular:build && npm run local:prod && node package.js --asar --platform=darwin --arch=x64",
    "local:prod": "cross-env NODE_ENV=production npm run electron:build",
    "remote:release": "set GH_TOKEN=changeThisToGithubToken && npm run remote:build",
    "remote:build": "node_modules/.bin/build --win -p always"
  },
  "author": {
    "name": "Errol Edric Dee",
    "email": "erroldee2002@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.3.3",
    "@angular/cdk": "^2.0.0-beta.8",
    "@angular/common": "^4.3.3",
    "@angular/compiler": "^4.3.3",
    "@angular/compiler-cli": "^4.3.3",
    "@angular/core": "^4.3.3",
    "@angular/forms": "^4.3.3",
    "@angular/http": "^4.3.3",
    "@angular/material": "^2.0.0-beta.8",
    "@angular/platform-browser": "^4.3.3",
    "@angular/platform-browser-dynamic": "^4.3.3",
    "@angular/router": "^4.3.3",
    "@types/cors": "^2.8.1",
    "@types/jasmine": "2.5.38",
    "@types/jquery": "^2.0.48",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/node": "^6.0.85",
    "@types/uuid": "^2.0.30",
    "cookie-parser": "~1.3.5",
    "core-js": "^2.4.1",
    "electron-localshortcut": "^2.0.2",
    "electron-log": "^2.2.7",
    "electron-updater": "^1.4.2",
    "hammerjs": "^2.0.8",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^7.4.2",
    "normalize.css": "^5.0.0",
    "rxjs": "^5.4.2",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.0.6",
    "tslint": "^4.5.1",
    "typescript": "^2.4.2",
    "uuid": "^3.1.0",
    "zone.js": "^0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.7",
    "codelyzer": "~2.1.1",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.4",
    "electron": "^1.6.11",
    "electron-builder": "^19.19.1",
    "electron-packager": "^8.7.2",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.5.0",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-remap-istanbul": "^0.2.1",
    "protractor": "^5.1.2",
    "webdriver-manager": "10.2.5"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "erroldee",
        "repo": "notupadu"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
