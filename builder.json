{
  "name": "angular-electron-workspace",
  "version": "1.0.0",
  "description": "Angular 2 implementation of Electron using Angular CLI for development and building",
  "main": "app.js",
  "scripts": {
    "start": "npm run angular:standalone",
    "angular:standalone": "ng serve --aot=true --progress=false --proxy-config proxy.conf.json",
    "angular:build": "ng build --prod --sm=false --aot=true --output-path=./dist/client",
    "electron:run": "electron .",
    "electron:build": "tsc -p ./electron",
    "electron:local": "npm run electron:build && npm run electron:run",
    "electron:prod": "set NODE_ENV=production&& npm run angular:build && npm run electron:build && npm run electron:run",
    "tdd:postinstall": "npm run angular:build",
    "tdd:test": "ng test --watch=false",
    "tdd:pree2e": "webdriver-manager update",
    "tdd:e2e": "protractor",
    "builder:linux": "set NODE_ENV=production&& npm run angular:build && npm run builder:prod && node package.js --asar --platform=linux --arch=x64",
    "builder:windows": "set NODE_ENV=production&& npm run angular:build && npm run builder:prod && node package.js --asar --platform=win32 --arch=ia32",
    "builder:mac": "set NODE_ENV=production&& npm run angular:build && npm run builder:prod && node package.js --asar --platform=darwin --arch=x64",
    "builder:prod": "cross-env NODE_ENV=production npm run builder:electron",
    "builder:electron": "npm run electron:build && copyfiles builder.json dist && renamer --find \"builder.json\" --replace \"package.json\" dist/*"
  },
  "author": {
    "name": "Errol Edric Dee",
    "email": "erroldee2002@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.3.3",
    "@angular/cdk": "^2.0.0-beta.8",
    "@angular/common": "^4.3.3",
    "@angular/compiler": "^4.3.3",
    "@angular/compiler-cli": "^4.3.3",
    "@angular/core": "^4.3.3",
    "@angular/forms": "^4.3.3",
    "@angular/http": "^4.3.3",
    "@angular/material": "^2.0.0-beta.8",
    "@angular/platform-browser": "^4.3.3",
    "@angular/platform-browser-dynamic": "^4.3.3",
    "@angular/router": "^4.3.3",
    "@types/cors": "^2.8.1",
    "@types/jasmine": "2.5.38",
    "@types/jquery": "^2.0.48",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/node": "^6.0.85",
    "@types/uuid": "^2.0.30",
    "cookie-parser": "~1.3.5",
    "core-js": "^2.4.1",
    "electron": "^1.6.11",
    "electron-log": "^2.2.7",
    "electron-updater": "^2.8.2",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^7.4.2",
    "normalize.css": "^5.0.0",
    "rxjs": "^5.4.2",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.0.6",
    "tslint": "^4.5.1",
    "typescript": "^2.4.2",
    "uuid": "^3.1.0",
    "zone.js": "^0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.7",
    "codelyzer": "~2.1.1",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.0.4",
    "electron-builder": "^19.19.1",
    "electron-packager": "^8.7.2",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.5.0",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-remap-istanbul": "^0.2.1",
    "protractor": "^5.1.2",
    "webdriver-manager": "10.2.5"
  }
}
